<%= form_for @child do |f| %>
  <%= error_messages(f.object) %>

  <%= f.hidden_field :parent_id %>

  <%= f.text_field :first_name, placeholder: "First Name" %>
  <%= f.text_field :last_name, placeholder: "Last Name" %>
  <br><br>
  <p>Check if the child has an allergy:  <%= f.check_box :allergy %></p>
  <br><br>
  <%= f.date_select :dob, start_year: Time.now.year - 12, end_year: Time.now.year, order: [:month, :day, :year] %>
  <br><br>
  <%= f.submit %>
<% end %>

<br><br>
<hr>
<%= link_to "Cancel", parent_path(@parent) %>
